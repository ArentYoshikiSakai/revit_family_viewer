<UserControl x:Class="revit_family_viewer.Your3DViewerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helix="http://helix-toolkit.org/wpf"
             xmlns:local="clr-namespace:revit_family_viewer"
             xmlns:viewModel="clr-namespace:revit_family_viewer.ViewModel">
    
    <UserControl.DataContext>
        <viewModel:ViewerViewModel />
    </UserControl.DataContext>
    <Grid>
        <helix:HelixViewport3D>
            <helix:HelixViewport3D.Children>
                <helix:MeshVisual3D Content="{Binding ModelGeometry}">
                </helix:MeshVisual3D>
            </helix:HelixViewport3D.Children>
        </helix:HelixViewport3D>

    </Grid>
</UserControl>

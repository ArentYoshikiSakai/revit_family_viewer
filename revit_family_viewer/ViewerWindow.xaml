<Window x:Class="revit_family_viewer.ViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helix="http://helix-toolkit.org/wpf"
        xmlns:local="clr-namespace:revit_family_viewer"
        xmlns:viewModel="clr-namespace:revit_family_viewer.ViewModel">
    
    <Window.DataContext>
        <viewModel:ViewerViewModel />
    </Window.DataContext>
    
    <Grid>
        <helix:HelixViewport3D Name="Viewport3D" ZoomExtentsWhenLoaded="True">
            <!-- カメラの設定 -->
            <helix:HelixViewport3D.Camera>
                <PerspectiveCamera Position="0,0,5" LookDirection="0,0,-1" UpDirection="0,1,0" />
            </helix:HelixViewport3D.Camera>
            
            <!-- ライティングの設定 -->
            <helix:SunLight/>
            
            <!-- 3D モデルの表示 -->
            <helix:MeshVisual3D Content="{Binding ModelGeometry}">
                <!-- 3D モデルの位置やスケールを調整するための Transform -->
                <helix:MeshVisual3D.Transform>
                    <Transform3DGroup>
                        <TranslateTransform3D OffsetX="0" OffsetY="0" OffsetZ="0"/>
                        <ScaleTransform3D ScaleX="1" ScaleY="1" ScaleZ="1"/>
                    </Transform3DGroup>
                </helix:MeshVisual3D.Transform>
            </helix:MeshVisual3D>
        </helix:HelixViewport3D>
    </Grid>
</Window>